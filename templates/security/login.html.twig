{% extends 'base.html.twig' %}

{% block title %}Acceso!{% endblock %}

{% block body %}
    <div class="mt-5"></div>
    <div class="features-section">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Has iniciado sesión como {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Cerrar sesión</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Por favor inicia sesión</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                   autocomplete="email" required autofocus>
            <label for="inputPassword">Contraseña</label>
            <input type="password" name="password" id="inputPassword" class="form-control"
                   autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">
                Acceder
            </button>
        </form>
        <div class="justify-content-center mt-5">
            <h6>¿Aún no tienes cuenta?
                <a href="{{ path('app_register') }}"> Registrate aquí.</a>
            </h6>
        </div>
    </div>
{% endblock %}
