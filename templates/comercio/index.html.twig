{% extends 'base.html.twig' %}

{% block title %}Comercios{% endblock %}

{% block body %}
<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
    <tr>
        <th>Comercio</th>
        <th>Dirección</th>
        <th>Categoría</th>
        <th>Descripción</th>
        <th>Estado</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for comercio in comercios %}
    <tr>
        <td>
            <div class="d-flex align-items-center">
                <img
                        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTqumqi5nDspADptzXhh9vWi4vrCqtFLhDamBBRbObfTigpLN7g2mvuHBu6ocIXl1E8IxQ&usqp=CAU"
                        alt=""
                        style="width: 45px; height: 45px"
                        class="rounded-circle"
                />
                <div class="ms-3">
                    <p class="fw-bold mb-1">{{ comercio.nombre }}</p>
                    <p class="text-muted mb-0">{{ comercio.email }}</p>
                </div>
            </div>
        </td>
        <td>
            <p class="fw-normal mb-1">{{ comercio.direccion }}</p>
        </td>
        <td>
            {#            TODO: sustituir por categoria cuando la haya#}
            <p class="text-muted mb-0">Tienda</p>
        </td>
        <td>
            <p class="fw-normal mb-1">{{ comercio.descripcion }}</p>
        </td>
        <td>
{#            TODO: hay que convertir el numero por el estado#}
            <span class="badge badge-success rounded-pill d-inline">{{ comercio.estado }}</span>
        </td>
        <td>
            <button type="button" class="btn btn-link btn-sm btn-rounded">
                <a href="/comercio/{{ comercio.id }}"><i class="far fa-eye fa-2x" ></i></a>
            </button>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
