            <div class="form-group mb-3">
                <select name="" id="form6" class="form-select" >
                    <option selected>{{ comercio.estado }}</option>
                    <option value="1">Abierto</option>
                    <option value="2">Cerrado</option>
                    <option value="3">Vacaciones</option>
                </select>
            </div>
            <div style="text-align: center; margin-top: 3%">
                <button type="button" class="btn btn-link btn-sm btn-rounded">
                    <a href="/admin/comercio/nombre/{{ comercio.id }}"><i class="far fa-square-check fa-2x" style="color: green" ></i></a>
                </button>

                <button type="button" class="btn btn-link btn-sm btn-rounded">
                    <a href="/admin/comercio/nombre/{{ comercio.id }}"><i class="fas fa-trash-can fa-2x" style="color: #B0413E" ></i></a>
