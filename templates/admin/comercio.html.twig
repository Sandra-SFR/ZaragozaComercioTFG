        <h1 style="text-align: center; margin-top: 5%">Editar comercio</h1>
        <div class="">
            <div class="row">

        <div class="col">
            <!-- Name input -->
            <div class="form-outline mb-3 mt-5">
                <input name="" type="text" id="form5Example2" class="form-control" />
                <label class="form-label" for="form5Example2">{{ comercio.nombre }}</label>
            </div>
            <!-- Email input -->
            <div class="form-outline mb-3">
                <input name="" type="email" id="form5Example2" class="form-control" />
                <label class="form-label" for="form5Example2">{{ comercio.email }}</label>
            </div>
            <!-- Telefono input -->
            <div class="form-outline mb-3">
